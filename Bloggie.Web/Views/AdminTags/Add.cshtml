@* model binding: binding properties of AddTagRequest to user form *@
@model Bloggie.Web.Models.ViewModels.AddTagRequest  

<div class="bg-secondary bg-opacity-10 py-2"> 
    <div class="container">   
        <h1>Add New Tag - Admin Functionality</h1>
    </div>
</div>

<div class="container py-5">
    <form method="post">
        <div class="mb-3">
            <label class="form-label">Name</label>
            <input type="text" class="form-control" id="name" asp-for="Name" required /> @*  asp-for="Name" MOdel properties binding *@
            <span class="text-danger" asp-validation-for="Name" ></span> @* Server side Validation message *@
        </div>

        <div class="mb-3">
            <label class="form-label">Dsipaly Name</label>
            <input type="text" class="form-control" id="displayName" asp-for="DisplayName" required />  @*  asp-for="DisplayName" MOdel properties binding *@
            <span class="text-danger" asp-validation-for="DisplayName" ></span> @* Server side Validation message *@
        </div>

        <div class="mb-3">
            <button type="submit" class="btn btn-dark">Save</button>
        </div>
    </form>
</div>